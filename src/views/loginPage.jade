h2 Log In
  form(ng-controller="LoginCtrl as login" ng-submit="login.authenticate()")
    .form-group
      label(for="emailAddress") Email address
      input(ng-model="login.email" type="email" class="form-control" id="emailAddress" placeholder="Enter email")
    .form-group
      label(for="password") Password
      input(ng-model="login.password" type="password" class="form-control" id="password" placeholder="Password")

      input(type="submit" class="btn btn-default" value="Log In")
