section.register
  form(name='myform', ng-submit='register()', novalidate='')
    h1 Register
    p To access site features
    p.error.formerror(ng-show='message') {{ message }}
    input(type='firstname', name='firstname', placeholder='First Name', ng-model='user.firstname', ng-required='true')
    p.error.validationerror(ng-show='myform.firstname.$invalid && myform.firstname.$touched')
      | First Name is required
    input(type='lastname', name='lastname', placeholder='Last Name', ng-model='user.lastname', ng-required='true')
    p.error.validationerror(ng-show='myform.lastname.$invalid && myform.lastname.$touched')
      | Last Name is required
    input(type='email', name='email', placeholder='Email', ng-model='user.email', ng-required='true')
    p.error.validationerror(ng-show='myform.email.$invalid && myform.email.$touched')
      | Must be a valid email
    input(type='password', name='password', placeholder='Password', ng-model='user.password', ng-required='true')
    p.error.validationerror(ng-show='myform.password.$invalid && myform.password.$touched')
      | password is required
    button.btn(type='submit', ng-disabled='myform.$invalid') Register
    p
      | or
      a(href='#/login') login
